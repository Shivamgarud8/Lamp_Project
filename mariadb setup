ðŸ“Œ Step 3: Create Database & Table
-- Create your project database
CREATE DATABASE lampdb;

-- Switch to it
USE lampdb;

-- Create the table to store form data
CREATE TABLE user_form (
    id INT AUTO_INCREMENT PRIMARY KEY,
    name VARCHAR(50),
    city VARCHAR(50),
    age INT,
    dept VARCHAR(50),
    submitted_at TIMESTAMP DEFAULT CURRENT_TIMESTAMP
);



